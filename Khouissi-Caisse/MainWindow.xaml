<Window x:Class="Khouissi_Caisse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Khouissi_Caisse"
        xmlns:views="clr-namespace:Khouissi_Caisse.Views"
        mc:Ignorable="d"
        Title="{DynamicResource AppTitle}"
        Height="600"
        Width="900"
        MinHeight="500"
        MinWidth="800"
        WindowStartupLocation="CenterScreen">

        <Window.Resources>
                <Style x:Key="NavButtonStyle"
                       TargetType="Button">
                        <Setter Property="Margin"
                                Value="5,2"/>
                        <Setter Property="Padding"
                                Value="10,8"/>
                        <Setter Property="MinWidth"
                                Value="120"/>
                        <Setter Property="Background"
                                Value="#2c3e50"/>
                        <Setter Property="Foreground"
                                Value="White"/>
                        <Setter Property="BorderThickness"
                                Value="0"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="HorizontalContentAlignment"
                                Value="Left"/>
                        <Setter Property="Template">
                                <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="4">
                                                        <ContentPresenter Margin="{TemplateBinding Padding}"
                                                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                          VerticalAlignment="{TemplateBinding VerticalAlignment}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver"
                                                                 Value="True">
                                                                <Setter Property="Background"
                                                                        Value="#34495e"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed"
                                                                 Value="True">
                                                                <Setter Property="Background"
                                                                        Value="#1a252f"/>
                                                        </Trigger>
                                                </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                </Setter.Value>
                        </Setter>
                </Style>
        </Window.Resources>
        <Grid>
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <!-- Navigation Panel -->
                <Border Background="#2c3e50"
                        Grid.Column="1">
                        <Grid>
                                <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- App Title and Logo -->
                                <StackPanel Grid.Row="0"
                                            Margin="10,20,10,30">
                                        <TextBlock Text="{DynamicResource AppTitle}"
                                                   Foreground="White"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Margin="0,0,0,10"/>
                                </StackPanel>

                                <!-- Navigation Buttons -->
                                <ScrollViewer Grid.Row="1"
                                              VerticalScrollBarVisibility="Auto">
                                        <StackPanel>
                                                <Button x:Name="HomeButton"
                                                        Content="{DynamicResource Home}"
                                                        Style="{StaticResource NavButtonStyle}"
                                                        Click="HomeButton_Click"/>
                                                <Button x:Name="MembersButton"
                                                        Content="{DynamicResource Members}"
                                                        Style="{StaticResource NavButtonStyle}"
                                                        Click="MembersButton_Click"/>
                                                <Button x:Name="SubscriptionsButton"
                                                        Content="{DynamicResource Subscriptions}"
                                                        Style="{StaticResource NavButtonStyle}"
                                                        Click="SubscriptionsButton_Click"/>
                                                <Button x:Name="ExpensesButton"
                                                        Content="{DynamicResource Expenses}"
                                                        Style="{StaticResource NavButtonStyle}"
                                                        Click="ExpensesButton_Click"/>
                                                <Button x:Name="ReportsButton"
                                                        Content="{DynamicResource Reports}"
                                                        Style="{StaticResource NavButtonStyle}"
                                                        Click="ReportsButton_Click"/>
                                                <Button x:Name="SettingsButton"
                                                        Content="{DynamicResource Settings}"
                                                        Style="{StaticResource NavButtonStyle}"
                                                        Click="SettingsButton_Click"/>
                                        </StackPanel>
                                </ScrollViewer>

                                <!-- User Info at Bottom -->
                                <Border Grid.Row="2"
                                        Background="#1a252f"
                                        Padding="10">
                                        <StackPanel>
                                                <TextBlock x:Name="UserNameText"
                                                           Text="مستخدم غير مسجل"
                                                           Foreground="White"
                                                           TextAlignment="Center"/>
                                                <Button x:Name="LoginButton"
                                                        Content="{DynamicResource Login}"
                                                        Margin="0,5,0,0"
                                                        HorizontalAlignment="Center"
                                                        Padding="15,5"
                                                        Background="#3498db"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Click="LoginButton_Click"/>
                                        </StackPanel>
                                </Border>
                        </Grid>
                </Border>
                <!-- Content Area -->
                <Border Grid.Column="0"
                        Background="#ecf0f1"
                        Padding="10">
                        <ContentControl x:Name="MainContent">
                                <!-- Content will be loaded here -->
                        </ContentControl>
                </Border>
        </Grid>
</Window>
