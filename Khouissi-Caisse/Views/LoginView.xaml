<UserControl x:Class="Khouissi_Caisse.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Khouissi_Caisse.Views"
             xmlns:vm="clr-namespace:Khouissi_Caisse.ViewModels"
             xmlns:converters="clr-namespace:Khouissi_Caisse.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600"
             FlowDirection="RightToLeft">

    <UserControl.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            
            <!-- Style for TextBoxes -->
            <Style x:Key="LoginTextBoxStyle" TargetType="TextBox">
                <Setter Property="Margin" Value="0,5,0,15"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Background" Value="#f8f9fa"/>
                <Setter Property="BorderBrush" Value="#ced4da"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>

            <!-- Style for PasswordBox -->
            <Style x:Key="LoginPasswordBoxStyle" TargetType="PasswordBox">
                <Setter Property="Margin" Value="0,5,0,15"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Background" Value="#f8f9fa"/>
                <Setter Property="BorderBrush" Value="#ced4da"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>

            <!-- Style for Buttons -->
            <Style x:Key="LoginButtonStyle" TargetType="Button">
                <Setter Property="Padding" Value="20,10"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="MinWidth" Value="100"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Border Background="White" 
                BorderBrush="#e9ecef" 
                BorderThickness="1" 
                CornerRadius="8" 
                Width="400" 
                MaxWidth="90%"
                Padding="30">
            <StackPanel>
                <!-- Title -->
                <TextBlock Text="{DynamicResource Login}" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Margin="0,0,0,30" 
                           TextAlignment="Center"/>
                
                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Red" 
                           Margin="0,0,0,15" 
                           TextWrapping="Wrap"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                
                <!-- Username -->
                <TextBlock Text="{DynamicResource Username}" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <TextBox Style="{StaticResource LoginTextBoxStyle}" 
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
                
                <!-- Password -->
                <TextBlock Text="{DynamicResource Password}" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" 
                             Style="{StaticResource LoginPasswordBoxStyle}"/>
                
                <!-- Remember Me -->
                <CheckBox Content="{DynamicResource RememberMe}" 
                          IsChecked="{Binding RememberMe}" 
                          Margin="0,0,0,20"/>
                
                <!-- Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Content="{DynamicResource Cancel}" 
                            Grid.Column="0" 
                            Style="{StaticResource LoginButtonStyle}" 
                            Background="#6c757d"
                            Command="{Binding CancelCommand}"/>
                    
                    <Button Content="{DynamicResource Login}" 
                            Grid.Column="1" 
                            Style="{StaticResource LoginButtonStyle}" 
                            Background="#28a745"
                            Command="{Binding LoginCommand}"/>
                </Grid>
                
                <!-- Loading Indicator -->
                <ProgressBar IsIndeterminate="True" 
                             Height="5" 
                             Margin="0,20,0,0" 
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>